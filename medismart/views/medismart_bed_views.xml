<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action -->
    <record id="medismart_bed_action" model="ir.actions.act_window">
        <field name="name">Beds</field>
        <field name="res_model">medismart.bed</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            No Data. Let's create some!
          </p>
        </field>
    </record>
    <!-- tree view of all beds -->
    <record id="medismart_beds_view_tree" model="ir.ui.view">
        <field name="name">medismart.bed.tree</field>
        <field name="model">medismart.bed</field>
        <field name="arch" type="xml">
            <tree string="Beds">
                <field name="available"/>
                <field name="type_of_bed"/>
                <field name="age"/>
            </tree>
        </field>
    </record>
    <!-- form view of beds -->
    <record id="medismart_beds_view_form" model="ir.ui.view">
        <field name="name">medismart.bed.form</field>
        <field name="model">medismart.bed</field>
        <field name="arch" type="xml">
            <form string="Beds">
                <sheet>
                    <group>
                        <field name="available"/>
                        <field name="type_of_bed"/>
                        <field name="age"/>
                        <field name="notes"/>
                    </group>
                </sheet>
                <!-- chatter -->
                <div class="oe_chatter">
                    <field name="activity_ids"/>
                    <field name="activity_state"/>
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <!-- Search View -->
    <record id="medismart_beds_search" model="ir.ui.view">
        <field name="name">medismart.bed.search</field>
        <field name="model">medismart.bed</field>
        <field name="arch" type="xml">
            <search string="Bed Search">
                <field name="available"/>
                <field name="type_of_bed"/>
                <field name="age"/>
                <field name="notes"/>
                <!-- filter -->
                <filter string="Available" name="available" domain="[('available','=','1')]"/>
                <filter string="New Beds" name="age" domain="[('age','&lt;','1')]"/>
                <!-- group by -->
                <filter name="available" string="Availability" context="{'group_by': 'available'}" />
            </search>
        </field>
    </record>
</odoo>
